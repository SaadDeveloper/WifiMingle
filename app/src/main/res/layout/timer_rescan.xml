<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity=""
            android:padding="10dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Timer for Re-Scan"
                android:layout_margin="@dimen/_15sdp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/current_time_set"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5 sec"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="60 sec"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbar_timer"
                android:layout_width="match_parent"
                android:progressDrawable="@drawable/seekbar_progressbar"
                android:progress="3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:thumb="@drawable/bg_thumb_seek_reward_default"
                android:fadingEdgeLength="0dp"
                android:splitTrack="false"/>
            <!--<SeekBar
                android:id="@+id/seekbar_reward"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/btn_add_reward"
                android:layout_toRightOf="@+id/btn_sub_reward"
                android:progressDrawable="@android:color/darker_gray"
                android:thumb="@drawable/background_thumb_reward" />-->
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
